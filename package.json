{
  "name": "windows-xp-oobe-recreation",
  "productName": "Windows XP OOBE Recreation",
  "version": "1.0.0",
  "description": "An (almost) exact recreation of the Windows XP Out of Box Experience. Made for the people who want to revisit the nostalgia of the 2000s.",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run svelte-dev & electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "svelte-build": "rollup -c",
    "svelte-dev": "rollup -c -w",
    "svelte-start": "sirv public --no-clear",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "package-linux": "electron-builder --linux",
    "package-win": "electron-builder --win"
  },
  "build": {
    "win": {
      "icon": "public/favicon.ico",
      "target": [
        "appx"
      ]
    },
    "appx": {
      "applicationId": "WindowsXPFirstTimeSetupRecreation",
      "identityName": "11103Nerbler09.WindowsXPFirstTimeSetupRecreation",
      "publisher": "CN=8FCAC29E-A771-4806-AD92-B16FDCD3656F",
      "publisherDisplayName": "Nerbler09",
      "backgroundColor": "#ffffff"
    },
    "linux": {
      "icon": "public/favicon.png",
      "target": [
        "snap"
      ]
    },
    "snap": {
      "summary": "Recreation of the Windows XP Out Of Box Experience",
      "confinement": "strict",
      "category": "Utility"
    }
  },
  "keywords": [],
  "author": {
    "name": "Noah Beaudin",
    "email": "noah.beauidn1@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_with_svelte_typescript"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "@jamen/svelte-router": "^0.4.0",
    "electron-is-dev": "^2.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-squirrel-startup": "^1.0.0",
    "sirv-cli": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.59",
    "@electron-forge/maker-deb": "^6.0.0-beta.59",
    "@electron-forge/maker-rpm": "^6.0.0-beta.59",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
    "@electron-forge/maker-zip": "^6.0.0-beta.59",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^2.0.0",
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "electron-packager": "^15.3.0",
    "electron-reloader": "^1.2.1",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^2.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  }
}
